<!doctype html>
<html>
  <head>
    <title>
      {{#if title}}
        {{title}}
      {{else}}
        Joost van Sandick
      {{/if}}
    </title>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://unpkg.com/scrollreveal@4"></script>
    <link rel="stylesheet" href="css/app.css">
    <meta name="google-site-verification" content="ZJM8tKeS2i5jtXpuSSW6vi8O17RSZQKFqdp1-VEDndw" />

    {{#> head-block}}
      {{!-- Custom <head> content per page could be added. --}}
    {{/head-block}}
  </head>
  <body>
    <div id="page-container">

    {{#> header-block}}
      {{> includes/header pagetitle="{{header}}" pagesubtitle="{{subheader}}"}}
    {{/header-block}}

    {{#> content-block }}
    
    {{/ content-block }}

    <footer>
      {{#> footer-block}}
        {{!--
          The `includes/footer` partial is the default content,
          but can be overridden.
        --}}
        {{> includes/footer }}
      {{/footer-block}}
    </footer>

    </div>
    {{#> scripts-block}}
      {{!-- Custom scripts per page can be added. --}}
    {{/scripts-block}}

    <script>
      ScrollReveal().reveal('.content', { duration: 700 });
      ScrollReveal().reveal('.article', { duration: 700 });
    </script>

    <script src="node_modules/jquery/dist/jquery.js"></script>
    <script src="node_modules/what-input/dist/what-input.js"></script>
    <script src="js/app.js"></script>

    <script>
    $('.article').click(function(){
      if (!$(this).hasClass('active')) {
        $(this).addClass('active');
    }});
    $('#menu-icon').click(function(){
        $('#mainmenu').toggleClass('active');
    });
    </script>
  </body>
</html>
